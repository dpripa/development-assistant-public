{
  "name": "dpripa/development-assistant",
  "version": "1.2.5",
  "type": "wordpress-plugin",
  "description": "Toolkit for debugging and customer support.",
  "homepage": "https://devassistant.dpripa.com",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Dmitry Pripa",
      "email": "i@dpripa.com",
      "homepage": "https://dpripa.com"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "config": {
    "platform-check": false,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "WPDevAssist\\": "inc/"
    }
  },
  "require": {
    "php": ">=7.4.0",
    "ext-zip": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3.1",
    "wp-coding-standards/wpcs": "^2.2.1"
  },
  "scripts": {
    "no-dev": "composer install --no-dev",
    "lint": "phpcs",
    "fix": "phpcbf"
  }
}
